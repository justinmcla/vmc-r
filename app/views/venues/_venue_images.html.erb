<div class = 'col-lg-6'>
  <div class = 'carousel slide' id = 'carouselControls' data-ride = 'carousel'>

    <div class = 'carousel-inner'>

      <div class = 'carousel-item active'>
        <%= image_tag @images.first.variant(resize_to_limit: [600, 600]), class: 'd-block mx-auto w-100' %>
      </div>>

      <% @images.drop(1).each do |image| %>
        <div class = 'carousel-item'>
          <%= image_tag image.variant(resize_to_limit: [600, 600]), class: 'd-block mx-auto w-100' %>
        </div>
      <% end %>

    </div>

    <a href = '#carouselControls' class = 'carousel-control-prev' role = 'button' data-slide = 'prev'>
      <span class = 'carousel-control-prev-icon' aria-hidden = 'true'></span>
      <span class = 'sr-only'>Previous</span>
    </a>

    <a href = '#carouselControls' class = 'carousel-control-next' role = 'button' data-slide = 'next'>
      <span class = 'carousel-control-next-icon' aria-hidden = 'true'></span>
      <span class = 'sr-only'>Next</span>
    </a>

  </div>
</div>