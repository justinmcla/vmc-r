<h1>Create Venue</h1>
<br>
<%= form_with model: Venue.new do |f| %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :name, "Venue Name", class: ['col-sm-4', 'col-form-label'] %>
        <%= content_tag(:div, class: ['col-sm-8']) do %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :configuration, "Configuration", class: ['col-sm-4', 'col-form-label'] %>
        <%= content_tag(:div, class: ['col-sm-8']) do %>
            <%= f.text_field :configuration, required: true, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :seats, "Seats", class: ['col-sm-4', 'col-form-label'] %>
        <%= content_tag(:div, class: ['col-sm-8']) do %>
            <%= f.number_field :seats, required: true, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :greenrooms, "Greenrooms", class: ['col-sm-4', 'col-form-label'] %>
        <%= content_tag(:div, class: ['col-sm-8']) do %>
            <%= f.number_field :greenrooms, required: true, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :dressing_rooms, "Dressing Rooms", class: ['col-sm-4', 'col-form-label'] %>
        <%= content_tag(:div, class: ['col-sm-8']) do %>
            <%= f.number_field :dressing_rooms, required: true, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= f.submit "Create Venue" %>
<% end %>