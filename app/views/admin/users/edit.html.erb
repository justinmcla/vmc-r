<h1>Update Account</h1>
<br>
<%= content_tag(:div, class: 'col-lg-6') do %>
<%= form_for current_user, url: admin_user_path(current_user), method: 'patch' do |f| %>
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name, placeholder: "Name", required: true, class: 'form-control' %><br>
    <%= f.label :email, "Email Address" %><br>
    <%= f.email_field :email, placeholder: "Email Address", required: true, class: 'form-control' %><br>
    <%= f.submit "Update", class: "btn" %>
<% end %>
<% end %>