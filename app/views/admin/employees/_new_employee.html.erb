<%= render partial: 'shared/errors', locals: { resource: @employee } %>

<%= form_for [ :admin, @employee ] do |f| %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :name, "Employee Name", class: ['col-md-2'] %>
        <%= content_tag(:div, class: ['col-md-3']) do %>
            <%= f.text_field :name, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :start_date, "Start Date", class: ['col-md-2'] %>
        <%= content_tag(:div, class: ['col-md-3']) do %>
            <%= f.text_field :start_date, data: { behavior: 'flatpickr' }, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :rate, "Hourly Rate", class: ['col-md-2'] %>
        <%= content_tag(:div, class: ['col-md-3']) do %>
            <%= f.text_field :rate, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= f.hidden_field :active, :value => true %>
    <%= f.submit class: 'btn' %>
<% end %>