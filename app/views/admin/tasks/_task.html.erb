<%= render partial: 'shared/errors', locals: { resource: @task} %>
<%= form_for [ :admin, @task ] do |f| %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: 'form-control' %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :notes, "Notes" %>
      <%= f.text_field :notes, class: 'form-control' %>
    <% end %>
  <% end %>
  <br>
  <%= f.submit class: 'btn' %>
<% end %>