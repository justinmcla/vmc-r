<%= render partial: 'shared/errors', locals: { resource: @booking } %>

<%= form_for [ :admin, @booking ] do |f| %>

    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :venue_id, "Select Venue", class: 'col' %>
        <%= content_tag(:div, class: 'col') do %>
            <%= f.select :venue_id, options_from_collection_for_select(current_user.venues.all, :id, :name, @booking.venue_id), {}, class: 'form-control' %>
        <% end %>
    <% end %>
        <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :organizer_id, "Select Organizer", class: 'col' %>
        <%= content_tag(:div, class: 'col') do %>
            <%= f.select :organizer_id, options_from_collection_for_select(current_user.organizers.all, :id, :name, @booking.organizer_id), {}, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :name, "Event Name", class: 'col' %>
        <%= content_tag(:div, class: 'col') do %>
            <%= f.text_field :name, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :event_type, "Event Type", class: 'col' %>
        <%= content_tag(:div, class: 'col') do %>
            <%= f.select :event_type, %w(Performance Lecture/Workshop Concert Reception/Fundraiser), {}, class: 'form-control' %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :date, "Date", class: 'col' %>
        <%= content_tag(:div, class: 'col') do %>
            <%= f.text_field :date, data: { behavior: 'flatpickr' } %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: ['form-group', 'row']) do %>
        <%= f.label :event_time, "Event Time", class: 'col' %>
