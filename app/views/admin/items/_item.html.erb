<%= render partial: 'shared/errors', locals: { resource: @item } %>
<%= form_for [ :admin, @venue, @inventory, @item ] do |f| %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :name, "Item Name" %>
      <%= f.text_field :name, class: 'form-control' %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :category, "Item Category" %>
      <%= f.text_field :category, class: 'form-control' %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :quantity, "Quantity" %>
      <%= f.number_field :quantity, class: 'form-control' %>
    <% end %>
  <% end %>
  <%= content_tag(:div, class: 'form-row') do %>
    <%= content_tag(:div, class: 'form-group col-lg-6') do %>
      <%= f.label :notes, "Notes" %>
      <%= f.text_area :notes, class: 'form-control' %>
    <% end %>
  <% end %>
  <br>
  <%= f.submit class: 'btn' %>
<% end %>